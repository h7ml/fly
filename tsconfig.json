{
  "compilerOptions": {
    "target": "es2018",
    "module": "ESNext",
    "lib": ["dom", "es6", "es2019", "es2020", "esnext"],
    "skipLibCheck": true,
    "sourceMap": true, // 生成sourceMap
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "declaration": true, // 生成定义文件
    "declarationMap": true, // 生成定义sourceMap
    "removeComments": true, // 移除注解
    "noImplicitAny": true, // 禁止使用any
    "strictNullChecks": true,
    "preserveConstEnums": false, // 枚举类型是否生成 映射代码
    "strictFunctionTypes": true,
    "noImplicitThis": true, // this 隐式具有 any 类型
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "./packages", // 根路径 路径映射,
    "paths": {}
  },
  "exclude": ["node_modules", "**/dist/**/*", "**/esm/**/*"],
  "include": ["./types", "./packages"] // * 匹配0或者多个字符 （不包括目录分割符） **/递归匹配任意子目录
}
